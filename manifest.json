{
    "manifest_version": 3,
    "name": "Weather Extension",
    "version": "1.0",
    "description": "Get weather updates based on your location.",
    "permissions": [
        "storage",
        "geolocation"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}